# Chat App (React Native/Expo) - App-Specific Environment Variables
# Note: Expo uses EXPO_PUBLIC_ prefix instead of NEXT_PUBLIC_

# Expo App Configuration
EXPO_PUBLIC_APP_URL=exp://localhost:8081

# API Backend URL (points to league-web API)
EXPO_PUBLIC_API_URL=http://localhost:3000/api

# Supabase (Expo requires EXPO_PUBLIC_ prefix)
# These should match the root .env.local values
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Push Notifications
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
# EXPO_PROJECT_ID=your-expo-project-id

# Feature Flags
EXPO_PUBLIC_ENABLE_TEAM_CHAT=true
EXPO_PUBLIC_ENABLE_DIRECT_MESSAGES=true
