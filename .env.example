# SimpleTeams Monorepo - Shared Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_TYPE=supabase
NEXT_PUBLIC_DATABASE_TYPE=supabase

# =============================================================================
# SUPABASE
# =============================================================================
# Project: https://supabase.com/dashboard/project/bzmromdmfwfaiuwwfscj
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Simple Supabase (alternative/legacy - can be removed if not needed)
SIMPLE_SUPABASE_URL=https://your-project.supabase.co
SIMPLE_SUPABASE_ANON_KEY=your-anon-key
SIMPLE_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SIMPLE_SUPABASE_TOKEN=your-supabase-access-token

# =============================================================================
# SANITY CMS
# =============================================================================
# Project: https://www.sanity.io/manage/personal/project/6bhzpimk
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id
NEXT_PUBLIC_SANITY_DATASET=dev
SANITY_API_TOKEN=your-sanity-token

# =============================================================================
# STRIPE PAYMENTS
# =============================================================================
# Dashboard: https://dashboard.stripe.com/test/dashboard
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Payment Configuration
NEXT_PUBLIC_PAYMENT_AMOUNT_PER_PLAYER=3000

# =============================================================================
# EMAIL (POSTMARK)
# =============================================================================
# Dashboard: https://account.postmarkapp.com/
POSTMARK_API_TOKEN=your-postmark-token
POSTMARK_FROM_EMAIL=your-sender@email.com

# =============================================================================
# AUTH & SECURITY
# =============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-random-secret-here
ADMIN_PASSWORD=set-admin-password

# =============================================================================
# APPLICATION CONFIG
# =============================================================================
# Active Season (UUID from Supabase seasons table)
NEXT_PUBLIC_ACTIVE_SEASON_ID=your-active-season-id

# =============================================================================
# APP-SPECIFIC OVERRIDES
# =============================================================================
# Each app can override these in their own apps/[app-name]/.env.local file:
# - NEXT_PUBLIC_APP_URL
# - Feature flags
# - App-specific API keys
